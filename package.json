{
  "name": "env-json-parser",
  "version": "1.0.0",
  "description": "Parse a set of environment variables as a JSON object",
  "repository": "koenig-dominik/env-json-parser",
  "keywords": [
    "environment",
    "env",
    "12factor",
    "json",
    "object",
    "parser",
    "node",
    "typescript",
    "ts"
  ],
  "author": {
    "name": "Dominik KÃ¶nig",
    "url": "https://github.com/koenig-dominik"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/koenig-dominik/env-json-parser/issues"
  },
  "homepage": "https://github.com/koenig-dominik/env-json-parser#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test:integration": "jest --config ./tests/jest-e2e.json --runInBand",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "release-it": "^13.5.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
